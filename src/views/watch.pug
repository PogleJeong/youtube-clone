extends base.pug

block content
    div#videoContainer 
        video(src="/"+ video.fileUrl, controls)
        div
            button#play Play
            button#mute Mute 
            input(type="range", min="0", max="1", step="0.1")#volume
            div
                span#currentTime 00:00:00
                span  / 
                span#totalTime 00:00:00
            div 
                input(type="range", step="0.1", value="0", min="0")#timeline
            div 
                button#fullScreen Enter Full Screen

    //
        div
            h1=video.title
            p=video.description
            small=video.createdAt 
        div    
            small Uploaded by 
                a(href=`/users/${video.owner._id}`) #{video.owner.name}
            
        if String(video.owner._id) === String(loggedInUser)
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;

block scripts 
    script(src="/static/js/videoPlayer.js")